{% include "base.html.twig" %}

  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Conversation</h5>
        </button>
      </div>
        {% if is_granted('ROLE_ADMIN') %}
            {# afficher la discussion avec l'utilisateur concerné qui tournera en temps réel #}
            <div class="discu">
                    <h3> id conversation : {{id_conversation}} </h3>

                    {% for msg in message %}
                        {% if msg.getIdConversation.id == id_conversation %}
                            <p class="msg"> {{msg.message}} </p>
                        {% endif %}
                    {% endfor %}
            </div>

        {% else %}
            <button class="contactAdmin"> Contacter un Admin </button>

            {# afficher la discussion avec l'admin concerné qui tournera en temps réel #}
            <div class="discu">

            </div>
        {% endif %}

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary closeModal" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>


{% block javascripts %}
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="{{ asset('/js/main.js') }}" type="text/javascript"></script>
{% endblock %}